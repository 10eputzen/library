{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha-webpack/bin/mocha-webpack",
            "args": [
                "./src/**/*.spec.ts",
                "--colors",
                "--timeout",
                "999999",
                "--webpack-env",
                "dbg",
                "--webpack-config",
                "webpack.config.test.js"
            ]
        },
